		{
			"name": "Messages",
			"item": [
				{
					"name": "Send Message (REST)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"receiverId\": \"{{receiver_id}}\",\n  \"content\": \"Hello! This is a test message.\"\n}"
						},
						"url": {
							"raw": "http://localhost:8080/api/messages/send",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"messages",
								"send"
							]
						}
					},
					"response": []
				},
