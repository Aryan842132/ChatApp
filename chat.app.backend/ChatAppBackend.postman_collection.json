					"name": "Get Chat History (Paginated)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "http://localhost:8080/api/messages/chat/{{chat_id}}?page=0&size=50",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8080",
							"path": [
								"api",
								"messages",
								"chat",
								"{{chat_id}}"
							],
							"query": [
								{
									"key": "page",
